<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Welcome Back"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_login_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Diam maecenas mi non sed ut odio. Non, justo, sed facilisi et. "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_welcome" />

    <ImageView
        android:id="@+id/image_username"
        android:layout_width="339dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/gray_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_login_long"
        app:srcCompat="@drawable/gray_radius"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="240dp" />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@null"
        android:gravity="center|left"
        android:hint="Username,Email &amp; Phone Number"
        android:inputType="text"
        android:textColor="@color/editText"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/image_username"
        app:layout_constraintStart_toStartOf="@id/image_username"
        app:layout_constraintTop_toTopOf="@id/image_username"
        app:layout_constraintVertical_bias="0.482" />

    <ImageView
        android:id="@+id/image_passwd"
        android:layout_width="335dp"
        android:layout_height="59dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gray_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_username"
        app:srcCompat="@drawable/gray_radius"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="240dp" />

    <EditText
        android:id="@+id/edit_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@null"
        android:gravity="center|left"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/editText"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/image_passwd"
        app:layout_constraintStart_toStartOf="@id/image_passwd"
        app:layout_constraintTop_toTopOf="@id/image_passwd" />

    <TextView
        android:id="@+id/text_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="10dp"
        android:text="Forgot Password?"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_passwd" />

    <ImageButton
        android:id="@+id/image_signIn"
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/pink_radius"
        android:contentDescription="sign in 버튼"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_forgot"
        app:srcCompat="@drawable/pink_radius" />

    <TextView
        android:id="@+id/text_signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/image_signIn"
        app:layout_constraintEnd_toEndOf="@id/image_signIn"
        app:layout_constraintStart_toStartOf="@id/image_signIn"
        app:layout_constraintTop_toTopOf="@id/image_signIn" />


    <TextView
        android:id="@+id/text_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:text="Or sign up With"
        android:textColor="@color/bb_gray"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/imagebtn_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:background="@drawable/circle"
        android:contentDescription="첫번째 버튼"
        app:layout_constraintBottom_toBottomOf="@id/imagebtn_facebook"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imagebtn_facebook"
        app:srcCompat="@drawable/google_icon" />

    <ImageButton
        android:id="@+id/imagebtn_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle"
        android:contentDescription="두번째 버튼"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_signUp"
        app:srcCompat="@drawable/facebook_icon" />

    <ImageButton
        android:id="@+id/imagebtn_apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="110dp"
        android:background="@drawable/circle"
        android:contentDescription="세번째 버튼"
        app:layout_constraintBottom_toBottomOf="@id/imagebtn_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imagebtn_facebook"
        app:srcCompat="@drawable/apple_icon" />

    <ImageView
        android:id="@+id/image_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/text_signUp"
        app:layout_constraintEnd_toStartOf="@id/text_signUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_signUp"
        app:srcCompat="@drawable/pink_m"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="490dp" />

    <ImageView
        android:id="@+id/image_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/text_signUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_signUp"
        app:layout_constraintVertical_bias="0.529"
        app:srcCompat="@drawable/pink_m" />

</androidx.constraintlayout.widget.ConstraintLayout>